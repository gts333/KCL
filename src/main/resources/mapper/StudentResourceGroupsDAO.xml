<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcl.dao.StudentResourceGroupsDAO">
    <insert id="addStudentResourceGroup">
        insert into student_resource_groups values (#{userId}, #{groupId});
    </insert>
    <delete id="deleteStudentResourceGroup">
        delete from student_resource_groups where user_id = #{userId} and group_id = #{groupId};
    </delete>
    <select id="selectStudentResourceGroupsByUserId">
        select * from student_resource_groups where user_id = #{userId} order by group_id;
    </select>

</mapper>